<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StickNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#0D5D44</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/window_bg</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/window_bg</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">#cf6679</item>
        <item name="colorOnError">@color/black</item>

        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>


    <style name="BigTitleText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="TitleText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="HideText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/accent</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/accent</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>