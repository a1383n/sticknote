<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">

        <ImageButton
            android:id="@+id/textStyle_undo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_text"
            android:src="@drawable/ic_baseline_undo_24"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">

        <ImageButton
            android:id="@+id/textStyle_redo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_text"
            android:src="@drawable/ic_baseline_redo_24"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">

        <ImageButton
            android:id="@+id/textStyle_bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_text"
            android:src="@drawable/ic_baseline_format_bold_24" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">

        <ImageButton
            android:id="@+id/textStyle_italic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_text"
            android:src="@drawable/ic_baseline_format_italic_24" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">

        <ImageButton
            android:id="@+id/textStyle_underline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_text"
            android:src="@drawable/ic_baseline_format_underlined_24" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">

        <ImageButton
            android:id="@+id/textStyle_ol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_text"
            android:src="@drawable/ic_baseline_format_list_numbered_24" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">

        <ImageButton
            android:id="@+id/textStyle_ul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_text"
            android:src="@drawable/ic_baseline_format_list_bulleted_24" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">

        <ImageButton
            android:id="@+id/textStyle_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_text"
            android:src="@drawable/format_header_pound" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">

        <ImageButton
            android:id="@+id/textStyle_jus_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_text"
            android:src="@drawable/ic_baseline_format_align_left_24" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">

        <ImageButton
            android:id="@+id/textStyle_jus_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_text"
            android:src="@drawable/ic_baseline_format_align_center_24" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp">

        <ImageButton
            android:id="@+id/textStyle_hus_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary_text"
            android:src="@drawable/ic_baseline_format_align_right_24" />
    </androidx.cardview.widget.CardView>

</LinearLayout>

</HorizontalScrollView>